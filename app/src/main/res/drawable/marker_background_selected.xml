<!-- res/drawable/circle_with_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/black" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <size
                android:width="55dp"
                android:height="55dp" />
        </shape>
    </item>

    <!-- SVG icon centered inside the circle -->
    <item
        android:width="40dp"
        android:height="40dp"
        android:drawable="@drawable/marker_selected"
        android:gravity="center" />
</layer-list>
<!-- res/drawable/circle_with_icon.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <size
                android:width="35dp"
                android:height="35dp" />
        </shape>
    </item>

    <!-- SVG icon centered inside the circle -->
    <item
        android:width="20dp"
        android:height="20dp"
        android:drawable="@drawable/marker"
        android:gravity="center" />
</layer-list>